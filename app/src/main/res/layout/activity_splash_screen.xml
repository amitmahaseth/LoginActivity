<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".SplashScreen">


        <ImageView
            android:id="@+id/creative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/imageDp"
            app:srcCompat="@drawable/creativity" />

        <TextView

            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="Select Your language"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:text="Lorem ipsum dolor sit amet,consectetur adispiscing mattis."
            android:textStyle="italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="2dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
        <Button
            android:background="@color/white"
            android:id="@+id/btn_english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:text="English" />

        <Button
            android:background="@color/white"
            android:id="@+id/btn_arabic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
           android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Arabic" />
</LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:background="@drawable/btn_round_eng"
        android:layout_width="match_parent"
        android:backgroundTint="@color/sky_blue"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_next"
        android:textStyle="bold"
        android:text="NEXT"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:id="@+id/btn_next"
        />


</LinearLayout>